---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body>
		<Header/>
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
</html>

<style is:global>

	p {
		margin: 0;
	}

	html {
		font-family: 'Acari Sans Neue', sans-serif;
		background: white;
		color: black;
		width: 85%;
		margin: 0 auto;
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	header, footer {
		flex-shrink: 0;
	}

	main {
		flex: 1 0 auto;
		display: flex;
		justify-content: center;
		font-size: 20px;
		line-height: 1;
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: normal;
		font-weight: 100;
		src: url("/fonts/AcariSansNeue-Thin.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: normal;
		font-weight: 200;
		src: url("/fonts/AcariSansNeue-Light.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: italic;
		font-weight: 200;
		src: url("/fonts/AcariSansNeue-LightItalic.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/AcariSansNeue-Regular.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: italic;
		font-weight: 400;
		src: url("/fonts/AcariSansNeue-Italic.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: normal;
		font-weight: 500;
		src: url("/fonts/AcariSansNeue-Medium.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: italic;
		font-weight: 500;
		src: url("/fonts/AcariSansNeue-MediumItalic.ttf") format("truetype");
	}

	@font-face {
		font-family: "Acari Sans Neue";
		font-style: normal;
		font-weight: 700;
		src: url("/fonts/AcariSansNeue-Bold.ttf") format("truetype");
	}
</style>
