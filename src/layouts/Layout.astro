---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/transitions.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<script src="../scripts/transitions.js"></script>
	</head>
	<Header/>
	<body>
		<slot />
	</body>
	<Footer/>
</html>
<style is:global>

	p {
		margin: 0;
	}

	html {
		font-family: 'Acari Sans', sans-serif;
		background: white;
		background-size: 224px;
		color: black;
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/AcariSans-Regular.woff") format("woff");
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: normal;
		font-weight: 300;
		src: url("/fonts/AcariSans-Light.woff") format("woff");
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: italic;
		font-weight: 300;
		src: url("/fonts/AcariSans-LightItalic.woff") format("woff");
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: normal;
		font-weight: 700;
		src: url("/fonts/AcariSans-Bold.woff") format("woff");
	}
</style>
