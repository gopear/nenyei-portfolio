---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>

<style is:global>

	p {
		margin: 0;
	}

	html {
		font-family: 'Acari Sans', sans-serif;
		background: white;
		background-size: 224px;
		color: black;
		height: 100%;
		width: 100%;
	}

	body {
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1 0 auto;
	}

	footer {
		flex-shrink: 0;
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/AcariSans-Regular.woff") format("woff");
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: normal;
		font-weight: 300;
		src: url("/fonts/AcariSans-Light.woff") format("woff");
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: italic;
		font-weight: 300;
		src: url("/fonts/AcariSans-LightItalic.woff") format("woff");
	}

	@font-face {
		font-family: "Acari Sans";
		font-style: normal;
		font-weight: 700;
		src: url("/fonts/AcariSans-Bold.woff") format("woff");
	}
</style>
